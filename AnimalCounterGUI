import java.util.Scanner;

public class AnimalCounterConsole {

    private int alligatorCount = 0;
    private int sheepCount = 0;

    public static void main(String[] args) {
        AnimalCounterConsole counter = new AnimalCounterConsole();
        counter.run();
    }

    public void run() {
        Scanner scanner = new Scanner(System.in);
        String choice;

        System.out.println("Welcome to the Animal Counter!");

        do {
            System.out.println("\nMenu:");
            System.out.println("1. Add Alligator");
            System.out.println("2. Add Sheep");
            System.out.println("3. Display Counts");
            System.out.println("4. Reset Counts");
            System.out.println("5. Exit");
            System.out.print("Choose an option: ");
            choice = scanner.nextLine();

            switch (choice) {
                case "1":
                    addAlligator();
                    break;
                case "2":
                    addSheep();
                    break;
                case "3":
                    displayCounts();
                    break;
                case "4":
                    resetCounts(scanner);
                    break;
                case "5":
                    System.out.println("Exiting... Goodbye!");
                    break;
                default:
                    System.out.println("Invalid choice! Please try again.");
            }
        } while (!choice.equals("5"));

        scanner.close();
    }

    private void addAlligator() {
        alligatorCount++;
        System.out.println("Alligator added! Total Alligators: " + alligatorCount);
    }

    private void addSheep() {
        sheepCount += 2;
        System.out.println("Sheep added! Total Sheep: " + sheepCount);
    }

    private void displayCounts() {
        System.out.println("Current Counts:");
        System.out.println("Alligators: " + alligatorCount);
        System.out.println("Sheep: " + sheepCount);
    }

    private void resetCounts(Scanner scanner) {
        System.out.println("Reset Counts:");
        System.out.println("1. Reset Alligator Count");
        System.out.println("2. Reset Sheep Count");
        System.out.print("Choose an option: ");
        String choice = scanner.nextLine();

        switch (choice) {
            case "1":
                alligatorCount = 0;
                System.out.println("Alligator count reset to 0.");
                break;
            case "2":
                sheepCount = 0;
                System.out.println("Sheep count reset to 0.");
                break;
            default:
                System.out.println("Invalid choice! No counts were reset.");
        }
    }
}
